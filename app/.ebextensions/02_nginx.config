files:
  "/etc/nginx/conf.d/proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      client_max_body_size 20M;
      
      upstream streamlit {
        server 127.0.0.1:8000;
      }
      
      server {
        listen 80;
        
        location / {
          proxy_pass http://streamlit;
          proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
          proxy_set_header Host $host;
          proxy_redirect off;
          proxy_http_version 1.1;
          proxy_set_header Upgrade $http_upgrade;
          proxy_set_header Connection "upgrade";
        }
        
        location ^~ /static/ {
          proxy_pass http://streamlit/static/;
        }
        
        location ^~ /healthcheck {
          proxy_pass http://streamlit/healthcheck;
        }
        
        location ^~ /vendor {
          proxy_pass http://streamlit/vendor;
        }
        
        location ^~ /st-file-uploader {
          proxy_pass http://streamlit/st-file-uploader;
        }
      }

  "/opt/elasticbeanstalk/hooks/appdeploy/post/99_start_streamlit.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash
      
      # Start Streamlit as a background process
      cd /var/app/current
      
      # Kill any existing Streamlit processes
      pkill -f streamlit || true
      
      # Start Streamlit
      python3 -m streamlit run application.py --server.port=8000 --server.address=0.0.0.0 --server.headless=true > /var/log/streamlit.log 2>&1 &
      
      exit 0

commands:
  01_remove_default_nginx_conf:
    command: "rm -f /etc/nginx/conf.d/00_elastic_beanstalk_proxy.conf"
    ignoreErrors: true
